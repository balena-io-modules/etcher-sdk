{
	"compilerOptions": {
		"typeRoots": ["typings", "node_modules/@types"],
		"module": "commonjs",
		"outDir": "build",
		"sourceMap": true,
		"declaration": true,
		"target": "es6",
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictNullChecks": true,
		"lib": [
			"es2016"
		]
	},
	"include": [
		"examples",
		"lib"
	],
	"exclude": [
		"node_modules",
		"build",
		"tests"
	]
}
